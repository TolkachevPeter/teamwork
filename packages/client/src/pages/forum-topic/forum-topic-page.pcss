.forum-topic {
  &__container {
    margin-top: 24px;
  }
}

.comments-header {
  margin-top: 24px;
  margin-right: auto;
}

.add-comment-button {
  max-width: 136px;
}

.comments {
  &__textarea {
    width: 100%;
    height: 56px;
    border: 1px solid var(--gray-500);
    border-radius: 4px;
    resize: none;
    overflow: hidden;
    padding: 0 12px;
  }
}

.new-comment-form {
  min-width: 499px;
  min-height: 206px;
  gap: 16px;
}
