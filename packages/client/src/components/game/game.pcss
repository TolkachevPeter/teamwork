.mobile-controls {
  display: none;
}

.game {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: var(--gray-900);

  &__info {
    width: 100%;
    flex: 0 0 60px;
  }

  &__info-fullscreen {
    width: 60vw;
    flex: 0 0 60px;
  }

  &__board {
    width: 60%;
  }

  &__board-fullscreen {
    width: 45vw;
  }
}

.game-fullscreen {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: var(--gray-900);
  border: 0;
  box-shadow: var(--shadow--2xl);
  padding: 20px;
}

@media only screen and (device-width <= 1024px) {
  .mobile-controls {
    display: inline;
  }

  .up,
  .left,
  .right,
  .down {
    cursor: pointer;
  }
}
