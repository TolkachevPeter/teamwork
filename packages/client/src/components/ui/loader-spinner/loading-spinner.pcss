@keyframes spinner {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

.loading-spinner {
  width: 100px;
  height: 100px;
  border: 10px solid var(--gray-900);
  border-top: 10px solid var(--white);
  border-radius: 50%;
  animation: spinner 1s linear infinite;
}
