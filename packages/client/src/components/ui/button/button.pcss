.button {
  height: 40px;
  padding: 8px 24px;
  border: 0;
  border-radius: 16px;
  gap: 10px;
  background: var(--blue-500);
  box-shadow: var(--shadow--base);
  cursor: pointer;
  text-decoration: none;
  font-family: Inter, serif;
  font-size: 16px;
  font-weight: 700;
  line-height: 24px;
  letter-spacing: 0;
  text-align: left;
  color: var(--white);

  &:hover {
    opacity: 0.8;
  }

  &:active {
    opacity: 0.95;
  }
}
