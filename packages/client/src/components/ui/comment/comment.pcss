.comment {
  &__container {
    min-width: 668px;
    min-height: 114px;
    padding: 24px;
    border-radius: 16px;
    background-color: var(--white);
    margin-bottom: 12px;
    margin-top: 24px;
    box-shadow: var(--shadow--base);
  }

  &__username {
    margin-bottom: 12px;
  }

  &__text {
    color: var(--gray-500);
  }

  &__date {
    color: var(--gray-500);
  }
}
