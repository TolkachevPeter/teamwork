.form {
  &__item {
    width: 493px;
    gap: 16px;
  }

  &__container {
    padding: 24px;
    background-color: var(--gray-50);
    gap: 24px;
    border-radius: 16px;
    box-shadow: var(--shadow--base);
  }

  &__header {
    font-family: Inter, serif;
    font-size: 20px;
    font-weight: 600;
    line-height: 30px;
    letter-spacing: 0;
    text-align: left;
  }

  &__button-wrapper {
    display: flex;
    justify-content: center;
    gap: 16px;
    margin-top: 6px;
  }
}
