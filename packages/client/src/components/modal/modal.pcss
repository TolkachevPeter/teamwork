.modal {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  background: var(--black-07);
  z-index: 5000;

  &__container {
    display: block;
    min-width: 20%;
    min-height: 20%;
    width: fit-content;
    height: fit-content;
    background: var(--white);
    border-radius: 16px;
  }
}
